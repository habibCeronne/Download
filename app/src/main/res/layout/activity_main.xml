<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.habisofttech.ceronne.notificationservice.MainActivity">

    <Button
        android:id="@+id/DownloadMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music Download" />

    <Button
        android:id="@+id/DownloadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Download" />

    <Button
        android:id="@+id/DownloadStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Status of Downloads" />

    <Button
        android:id="@+id/CancelDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel All Downloads" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/DownloadData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
